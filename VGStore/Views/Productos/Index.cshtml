@model IEnumerable<VGStore.Models.Productos>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Listado de Productos</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp; Agregar nueva Producto</a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th class="text-center">Nombre del producto</th>
                <th class="text-center">Categoría</th>
                <th class="text-center">Consola</th>
                <th class="text-center">Precio</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
            <tr>
                <td width="50%">@obj.Nombre</td>
                <td width="20%">@obj.Categoria.Name</td>
                <td width="20%">@obj.Consoles.Name</td>
                <td width="10%">@obj.Precio</td>
                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Upsert" asp-route-Id="@obj.IdProducto" class="btn btn-info mx-2"><i class="fas fa-edit"></i></a>
                        <a asp-action="Delete" asp-route-Id="@obj.IdProducto" class="btn btn-danger mx-2 "><i class="fas fa-trash-alt"></i></a>
                    </div>
                </td>
            </tr>
    }
        </tbody>
    </table> 
            }
     else
     {
        <p>No existen Productos</p>
     }

</div>




