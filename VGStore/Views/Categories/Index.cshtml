@model IEnumerable<VGStore.Models.Categories>

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Listado de Categorías</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Categories" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp; Agregar nueva categoría</a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">  
            <thead>
                <tr>
                    <th class="text-center">Nombre de la categoría</th>
                    <th class="text-center">Orden</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="50%">@obj.Order</td>
                        <td class="text-center"> 
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Categories" asp-action="Edit" asp-route-Id="@obj.IdCategory" class="btn btn-info mx-2"><i class="fas fa-edit"></i></a>
                                <a asp-controller="Categories" asp-action="Delete" asp-route-Id="@obj.IdCategory" class="btn btn-danger mx-2 "><i class="fas fa-trash-alt"></i></a> 
                            </div>
                        </td>
                    </tr> 
                }
            </tbody>
        </table>


    }
    else
    {
       <p>No existen categorías</p>
    }

</div>


