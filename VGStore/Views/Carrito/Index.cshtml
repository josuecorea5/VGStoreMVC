@model IEnumerable<Productos>

@if(Model.Count() > 0)
{
    <form method="post">
        <br />
        <div class="backgroundWhiteBorder">
            <div class="container row">
                <div class="col-8">
                    <div class="card mt-4">
                        <div class="card-header bg-dark text-light ml-0 row container">
                            <div class="col-6">
                                <i class="fa fa-shopping-cart"></i> &nbsp; Carrito de Compras
                            </div>
                            <div class="col-6 text-right">
                                <a asp-action="Index" asp-controller="Home" class="btn btn-warning btn-sm">Seguir Comprando</a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-none d-lg-block">
                                <div class="row" style="color: #1b1a1a">
                                    <div class="col-lg-2"></div>
                                    <div class="col-12 col-lg-7">
                                        Detalles del producto
                                    </div>
                                    <div class="col-12 col-lg-2">
                                        Precio
                                    </div>
                                    <div class="col-6 col-sm-4 col-lg-1"></div>
                                </div>
                            </div>
                        </div>
                        <hr />
                        @foreach(var obj in Model)
                        {
                          <div class="row h-100 p-3">
                             <div class="col-4 col-md-2 text-center py-2">
                                 <img src="@WC.ProductosPath@obj.Imagen" class="rounded" width="100%" />
                             </div>
                              <div class="col-4 col-lg-7">
                                   <h5>@obj.Nombre</h5>
                              </div>
                              <div class="col-2 mb-4 col-lg-7">
                                  <b>Categoria: </b> <span class="bagde p-2 border" style="background-color:forestgreen">@obj.Categoria.Name</span>
  
                              </div>
                              <div class="col-2 col-lg-7">
                    
                                <b>Consola: </b> <span class="bagde p-2 border" style="background-color:gold">@obj.Consoles.Name</span>   
                              </div>
                              <div class="col-3 col-lg-2 pt-lg-4" style="font-size: 12px;">
                                  <span style="font-size: 17px;">@obj.Precio</span>
                              </div>
                              <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                                  <a asp-action="Remover" asp-route-id="@obj.IdProducto" class="btn btn-outline-danger">
                                      <i class="fas fa-trash"></i>
                                  </a>
                              </div>
                             
                          </div>
                          <hr />
                        }
                        @{
                            double total = @Model.Sum(x => x.Precio);
                            <p>Total: $@total</p>
                        }
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-6 col-md-3 offset-md-9">
                                <button type="submit" class="btn btn-success form-control">
                                    <span>Continuar</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}else
{
    <p>Por favor agregar items al carrito.</p>
}
