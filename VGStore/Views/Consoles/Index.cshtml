@model IEnumerable<VGStore.Models.Consoles>
<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Listado de Consolas</h2>
        </div>
        <div class="col-6 text-lg-right">
            <a asp-controller="Consoles" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> &nbsp; Agragar nueva consola</a>
        </div>
    </div>
</div>
 <br />

@if (Model.Count() > 0) 
  { 
    <table class="table table-bordered table-striped" style="width:100%" >
        <thead>
            <tr>
                <th class="text-center">Nombre de la consola</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
             {
            <tr>
                <td width="80%">@obj.Name</td>
                <td class="text-center">
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Consoles" asp-action="Edit" asp-route-Id="@obj.IdConsole" class="btn btn-info mx-2"><i class="fas fa-edit"></i></a>
                        <a asp-controller="Consoles" asp-action="Delete" asp-route-Id="@obj.IdConsole" class="btn btn-danger mx-2"><i class="fas fa-trash-alt"></i></a>
                    </div>
                </td>
            </tr>
             }
        </tbody>
    </table>
 }else
 {
    <p>No existen consolas</p>
 }
<script>
    $(document).ready(function () {
        $('#summernote').summernote({
            height: 250,
            width: 500,
            lang: 'es-ES'
        });
    });
</script>